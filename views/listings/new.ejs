<% include ../partials/header %>

<div class="fill">
    
    <section class="form-frame container-fluid no-gutters">
            
        <div class="row no-gutters">
            
            <div class="col">
                
                <form action="/listings" method="POST" data-aos="fade-in">
                    
                    <h2 class="text-center">Create your Trainer Listing</h2>
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Your name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="Price per month" min="0.01" step="0.01"> <!--step adds a stepper-->
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Listing image url">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" rows="4" placeholder="About you and how you train"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Create</button>
                    </div>
                </form>
                
                <a href="#" class="back" onclick="window.history.back();return false;">&laquo; Back</a>
            
            </div><!--/col-->
            
        </div><!--/row-->
        
    </section>
    
</div><!--/fill-->

<% include ../partials/footer %>

