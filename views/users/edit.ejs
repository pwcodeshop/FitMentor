<% include ../partials/header %>

<div class="fill">
    
    <section class="form-frame container-fluid no-gutters">
            
        <div class="row no-gutters">
            
            <div class="col">
                
                <form action="/users/<%=user._id%>?_method=PUT" method="POST" data-aos="fade-in">
                    
                    <h2 class="text-center">Edit User Account</h2>
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="userObj[username]" placeholder="username" value="<%= user.username%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="userObj[fullName]" placeholder="your full name" value="<%= user.fullName%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="userObj[avatar]" placeholder="avatar image URL" value="<%= user.avatar%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="userObj[aboutMe]" placeholder="a blurb about yourself" value="<%= user.aboutMe%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update</button>
                    </div>
                </form>
                
                <a href="#" class="back" onclick="window.history.back();return false;">&laquo; Back</a>
                
            </div><!--/col-->
            
        </div><!--/row-->
        
    </section>
    
</div><!--/fill-->
    
<% include ../partials/footer %>